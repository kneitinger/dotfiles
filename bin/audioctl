#!/usr/bin/env bash

SINK="$(pactl list sinks | grep "RUNNING"  -A1 | cut -d':' -f2 | tail -n1 | tr -d ' ')"

if [ -z "$SINK" ]; then
	SINK="$(pactl info | grep 'Default Sink:' | cut -d':' -f2 | tr -d ' ')"
fi

case "$1" in
    "vol")
        pactl set-sink-volume "$SINK" "$2"
        ;;
    "mute")
        pactl set-sink-mute "$SINK" toggle
        ;;
esac
