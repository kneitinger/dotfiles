# THEME CONFIGURATION #

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. After the comma is the fallback font.
# In this case, it handles the iconic glyphs in the workspace names and status
# bar. Uses AUR pkg ttf-font-icons
font pango:Inconsolata, FontAwesome 10

# Background image
exec --no-startup-id feh --bg-scale ~/Pictures/_bg.jpg

# New window's border
new_window pixel 2

# Colorscheme definitions
set $salmonl #AF8787
set $salmon  #AF5F5F
set $salmond #5C4D4D
set $sand    #D7AF87
set $earth   #875F5F
set $turf    #87875F
set $white   #FFFFFF
set $grey    #CCCCCC
set $clay    #AF3C00
set $greyd   #2E3436

# Color scheme
# class                 border   backgr   text   indicator
client.focused          $salmon  $salmon  $white $turf
client.unfocused        $salmond $salmond $grey  $turf
client.focused_inactive $salmond $salmonl $white $turf

# i3bar configuration
bar {
    position top
    mode dock
    # Holding <Alt> displays the dock if it is hidden with $mod+b
    modifier $alt

    # Don't show #s on workspace labels. Looks pleasant & retains functionality
    strip_workspace_numbers yes

    # Using i3pystatus
    status_command python ~/.i3/status.py
    # Do not print visible separator between elements of the status bar
    separator_symbol "  "
    tray_output primary

    colors {
        background $greyd
        statusline $sand
        separator  $turf

        # Property         border   backgr   text
        focused_workspace  $salmon  $salmon  $white
        active_workspace   $salmond $salmond $white
        inactive_workspace $greyd   $greyd   $grey
        urgent_workspace   $clay    $salmond $white
        binding_mode       $salmon  $salmon  $white
    }
}
