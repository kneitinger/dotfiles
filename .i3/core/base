# Kyle Kneitinger's i3 config file

# WM mod key: Mod1 for alt, Mod4 for win.
set $mod Mod3
set $alt Mod1
set $super Mod4

# Workspace definitions
set $ws1 "1:  1  "
set $ws2 "2:  2  "
set $ws3 "3:  3  "
set $ws4 "4:  4  "
set $ws5 "5:  5  "
set $ws6 "6:  6  "
set $ws7 "7:  7  "
set $ws8 "8:  8  "
set $ws9 "9:  9  "
set $ws0 "0:  0  "

# Configure default workspace for certain applications
assign [class="Slack"] $ws6

# No border for apps that usually take up a whole workspace
for_window [class="Slack"] border none
for_window [class="Virt-manager"] border none
for_window [class="Firefox"] border none
for_window [title="feh:/tmp/*"] floating enable

# Mark windows for named scratchpads
for_window [class="Spotify"] mark "music", move scratchpad
for_window [class="keepassxc" title="db - KeePassXC"] mark "keys", move scratchpad
for_window [class="TelegramDesktop"] mark "tele", move scratchpad
for_window [title="vimwiki"] mark "vimwiki", move scratchpad

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod
focus_follows_mouse yes

# Enable double pressing of workspace binding to return to previous space
workspace_auto_back_and_forth yes

# Autolaunch programs at boot
exec i3-sensible-terminal
exec keepassxc
exec firefox
exec slack
exec nm-applet
exec blueman-applet
exec syncthing --gui-address="http://localhost:8384"
