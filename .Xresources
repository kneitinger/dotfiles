! Colorscheme; derived from http://sailorhg.github.io/fairyfloss/
! special
*.foreground:  #f6f6ef
*.background:  #5a5376
*.cursorColor: #f6f6ef
! black
*.color0:      #000000
*.color8:      #555555
! red
*.color1:      #eb5d5c
*.color9:      #fd8b89
! green
*.color2:      #5fe861
*.color10:     #6dff6f
! yellow
*.color3:      #dfb508
*.color11:     #ffe90a
! blue
*.color4:      #9d65ff
*.color12:     #b78cff
! magenta
*.color5:      #fc6ea2
*.color13:     #fda6c7
! cyan
*.color6:      #70f7aa
*.color14:     #b7ffd7
! white
*.color7:      #bbbbbb
*.color15:     #ffffff

! Rofi colors
rofi.color-enabled: true
rofi.color-normal:  #555555,#f6f6ef,#555555,#b78cff,#f6f6ef
rofi.color-active:  #555555,#70f7aa,#555555,#555555,#70f7aa
rofi.color-window:  #555555,#70f7aa

! Rofi appearance
rofi.font:            OperatorMonoMedium Italic 10
!rofi.font:           FantasqueSansMono 10
rofi.separator-style: solid
rofi.padding:         3
rofi.location:        2
rofi.hide-scrollbar:  true
rofi.width:           50
rofi.lines:           15
rofi.columns:         1

! Rofi mechanics
rofi.matching:       fuzzy
rofi.sort:           true
rofi.sorting_method: fzf

! URxvt Appearance
URxvt.font:       xft:OperatorMonoMedium:size=10,xft:Noto Color Emoji:size=10
!URxvt.font:      xft:FantasqueSansMono:size=10
URxvt.italicFont: xft:OperatorMonoMedium:size=10:Italic
urxvt*depth:      32
urxvt*background: #5a5376

! URxvt Scrolling
URxvt.scrollBar:         false
! do not scroll with output
URxvt*scrollTtyOutput:   false
! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress: true
! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer:  true
! scrollback buffer size
URxvt*saveLines:         50000

! (requires https://github.com/majutsushi/urxvt-font-size)
URxvt.perl-ext:        font-size,vim-scrollback
URxvt.keysym.C-Up:     font-size:increase
URxvt.keysym.C-Down:   font-size:decrease
URxvt.keysym.C-S-Up:   font-size:incglobal
URxvt.keysym.C-S-Down: font-size:decglobal
URxvt.keysym.C-equal:  font-size:reset
URxvt.keysym.C-slash:  font-size:show
! (requires https://github.com/ervandew/urxvt-vim-scrollback)
urxvt.vim-scrollback:  M-x


URxvt.perl-ext-common: default,matcher
URxvt.url-launcher:    /usr/bin/xdg-open
URxvt.matcher.button:  3

! Xorg font appearance
Xft.antialias: true
Xft.rgba:      rgba
Xft.hinting:   true
Xft.hintstyle: hintslight
Xft.autohint:  true
Xft.lcdfilter: lcddefault
