! Colorscheme; derived from http://sailorhg.github.io/fairyfloss/
! special
*.foreground:  #f6f6ef
*.background:  #5a5376
*.cursorColor: #f6f6ef
! black
*.color0:      #000000
*.color8:      #555555
! red
*.color1:      #eb5d5c
*.color9:      #fd8b89
! green
*.color2:      #5fe861
*.color10:     #6dff6f
! yellow
*.color3:      #dfb508
*.color11:     #ffe90a
! blue
*.color4:      #b78cff
*.color12:     #9d65ff
! magenta
*.color5:      #fc6ea2
*.color13:     #fda6c7
! cyan
*.color6:      #70f7aa
*.color14:     #b7ffd7
! white
*.color7:      #bbbbbb
*.color15:     #ffffff

! Rofi colors
rofi.color-enabled: true
rofi.color-normal:  #555555,#f6f6ef,#555555,#b78cff,#f6f6ef
rofi.color-active:  #555555,#70f7aa,#555555,#555555,#70f7aa
rofi.color-window:  #555555,#70f7aa

! Rofi appearance
rofi.font:            OperatorMonoMedium Italic 10
!rofi.font:           FantasqueSansMono 10
rofi.separator-style: solid
rofi.padding:         3
rofi.location:        2
rofi.hide-scrollbar:  true
rofi.width:           50
rofi.lines:           15
rofi.columns:         1

! Rofi mechanics
rofi.matching:       fuzzy
rofi.sort:           true
rofi.sorting_method: fzf

! Xorg font appearance
Xft.antialias: true
Xft.rgba:      rgba
Xft.hinting:   true
Xft.hintstyle: hintslight
Xft.autohint:  true
Xft.lcdfilter: lcddefault
Xft.dpi: 96

Xcursor.size: 32
