*.background:   #1c1c1c
*.cursorColor:  #dfdfaf

! black
*.color0:       #1c1c1c
*.color8:       #875f5f

! red
*.color1:       #af1600
*.color9:       #af5f5f

! green
*.color2:       #af5f00
*.color10:      #d75f00

! yellow
*.color3:       #878787
*.color11:      #5f5f87

