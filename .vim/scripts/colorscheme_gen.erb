        [ "String", "NONE", yellow, "NONE" ],
        [ "Number", "Constant" ],
        [ "Function", "Normal" ],
        [ "Todo", "NONE", darkred, "bold" ],
        [ "Type", "NONE", magenta, "NONE" ],
        [ "Underlined", "NONE", white, "underline" ],
        [ "StatusLine", "NONE", white, "NONE" ],
        [ "StatusLineNC", "NONE", white, "NONE" ],
        [ "VertSplit", "NONE", white, "NONE" ],
        [ "TabLine", "NONE", white, "NONE" ],
        [ "TabLineFill", "NONE", white, "NONE" ],
        [ "TabLineSel", "NONE", white, "NONE" ],
        [ "Title", "NONE", white, "NONE" ],
        [ "CursorLine", darkgray, "NONE", "NONE" ],
        [ "LineNr", "NONE", blue, "NONE" ],
        [ "CursorLineNr", "NONE", magenta, "NONE" ],
        [ "helpLeadBlank", "NONE", white, "NONE" ],
        [ "helpNormal", "NONE", white, "NONE" ],
        [ "Visual", black, "NONE", "NONE" ],
        [ "VisualNOS", "NONE", white, "NONE" ],
        [ "Pmenu", "NONE", white, "NONE" ],
        [ "PmenuSbar", "NONE", white, "NONE" ],
        [ "PmenuSel", "NONE", white, "NONE" ],
        [ "PmenuThumb", "NONE", white, "NONE" ],
        [ "FoldColumn", "NONE", white, "NONE" ],
        [ "Folded", "NONE", white, "NONE" ],
        [ "WildMenu", "NONE", white, "NONE" ],
        [ "SpecialKey", "NONE", white, "NONE" ],
        [ "DiffAdd", "NONE", white, "NONE" ],
        [ "DiffChange", "NONE", white, "NONE" ],
        [ "DiffDelete", "NONE", white, "NONE" ],
        [ "DiffText", "NONE", white, "NONE" ],
        [ "IncSearch", "NONE", green, "bold" ],
        [ "Search", "NONE", green, "NONE" ],
        [ "Directory", "NONE", white, "NONE" ],
        [ "MatchParen", "NONE", white, "NONE" ],
        [ "SpellBad", "NONE", white, "NONE", red ],
        [ "SpellCap", "NONE", white, "NONE", blue ],
        [ "SpellLocal", "NONE", white, "NONE", magenta ],
        [ "SpellRare", "NONE", white, "NONE", cyan ],
        [ "ColorColumn", "NONE", white, "NONE" ],
