        [ "WarningMsg", "Error" ],
        [ "Cursor", "NONE", white, "NONE" ],
        [ "CursorColumn", "NONE", white, "NONE" ],
        [ "QuickFixLine", "NONE", white, "NONE" ],
        [ "StatusLine", darkblue, white, "bold" ],
        [ "StatusLineTerm", darkblue, white, "NONE" ],
        [ "StatusLineTermNC", "NONE", white, "NONE" ],
        [ "rustFuncName", "NONE", cyan, "italic" ],
        [ "rustFuncCall", "NONE", cyan, "italic" ],
    ]

    # Define the color platte used by :terminal when in GUI Vim
    # or in TUI Vim when 'termguicolors' is enabled. If this list
    # is empty or if it doesn't contain exactly 16 items, the corresponding
    # Vim variable won't be set.
    #
    # The expected values are colors defined in step 2.
    terminal_ansi_colors = [
        black,
        darkred,
        darkgreen,
        darkyellow,
        darkblue,
        darkmagenta,
        darkcyan,
        gray,
        darkgray,
        red,
        green,
        yellow,
