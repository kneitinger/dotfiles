# Kyle Kneitinger's i3 config file

# WM mod key
set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. After the comma is the fallback font.
# In this case, it handles the iconic glyphs in the workspace names and status
# bar. Uses AUR pkg ttf-font-icons
font pango:Inconsolata, FontAwesome 10

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod


# Workspace definitions

# Workspace 1: terminal with computer monitor icon
set $ws1 "1: gen"
# Workspace 2: internet with globe icon
set $ws2 "2: web"
# Workspace 3: documents with folded corner page icon
set $ws3 "3:Σ algs"
set $ws4 "4: lang"
# Workspace 4: media with film frame icon
set $ws5 "5: works"
set $ws6 "6: media"
set $ws7 "7: misc"

# Application Launchers
#bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Return exec roxterm
bindsym $mod+m exec vlc
bindsym $mod+Shift+m exec google-chrome-stable; workspace $ws7
bindsym $mod+n exec firefox
bindsym $mod+p exec pcmanfm
bindsym $mod+u exec uzbl-browser
bindsym $mod+t exec ~/bin/toggle-syn

# Autolaunch programs at boot
exec roxterm
exec --no-startup-id redshift
exec keepassx
exec firefox

# Map left-control tap to escape // handled in .xinitrc
#exec --no-startup-id xcape -e 'Control_L=Escape' -t 175
#
# Configure default workspace for certain applications
assign [class="Firefox" window_type="normal"] $ws2
#assign [class="[U,u]zbl-core"] $ws2
#assign [class="[V,v]lc"] $ws5
assign [class="Google-chrome"] $ws4


bindsym Insert nop



for_window [class="Google-chrome"] border none
for_window [class="Firefox"] border none
for_window [title="feh:/tmp/*"] floating enable

# kill focused window
bindsym $mod+Shift+c kill 

# Display dmenu bar w/ patch for height & xft fonts. AUR pkg dmenu-xft-height
#bindsym $mod+d exec dmenu_run -h 20 -fn "Inconsolata-10" -nb "$bg" -sb "$fg"
bindsym $mod+d exec rofi -show run
bindsym $mod+b exec ~/bin/pdfselect
bindsym $mod+o exec ~/bin/mimelaunch
bindsym $mod+x exec rofi -show window
# Display stock dmenu bar
# bindsym $mod+d exec dmenu_run -nb "$bg" -sb "$fg"

# Map volume keys to amixer functions
bindsym XF86AudioMute exec amixer sset Master toggle

bindsym XF86AudioLowerVolume exec pactl set-sink-volume 1 -3% 
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume 1 +3%
bindsym $mod+XF86AudioLowerVolume exec pactl set-sink-volume 1 -10% 
bindsym $mod+XF86AudioRaiseVolume exec pactl set-sink-volume 1 +10%

bindsym XF86AudioMicMute exec amixer sset Capture toggle

bindsym XF86MonBrightnessDown exec xbacklight -dec 5
bindsym $mod+XF86MonBrightnessDown exec xbacklight -set 2
bindsym XF86MonBrightnessUp exec xbacklight -inc 3
bindsym $mod+XF86MonBrightnessUp exec xbacklight -set 100

bindsym XF86Display exec ~/bin/toggle-jack
bindsym $mod+XF86Display exec ~/bin/toggle-jack h4
bindsym $mod+Shift+XF86Display exec ~/bin/toggle-jack usb

bindsym XF86Tools exec roxterm -e nmtui 
bindsym $mod+XF86Tools exec roxterm -e htop

bindsym XF86Search exec ~/bin/picnote
bindsym $mod+XF86Search exec scrot -s /tmp/$(date +"%F_%H-%M").png

bindsym $mod+XF86LaunchA exec /home/leaf/bin/extscreen --left
#bindsym $mod+Shift+XF86LaunchA exec /home/leaf/bin/extscreen --off
bindsym XF86LaunchA exec /home/leaf/bin/extscreen --right

bindsym XF86Explorer move workspace to output left

# Universal vim keys
bindsym Mod1+Ctrl+h exec xdotool getactivewindow key Left
bindsym Mod1+Ctrl+j exec xdotool getactivewindow key Down
bindsym Mod1+Ctrl+k exec xdotool getactivewindow key Up
bindsym Mod1+Ctrl+l exec xdotool getactivewindow key Right

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+g split h
# split in vertical orientation
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# Toggle window title bar
bindsym $mod+minus border toggle

# The middle button over a titlebar kills the window
bindsym button2 kill

# Toggle i3 bar
bindsym $mod+Shift+b bar mode toggle

# Send to scratchpad
bindsym $mod+Shift+grave move scratchpad
# Show scratchpad
bindsym $mod+grave scratchpad show

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+w layout tabbed
#bindsym $mod+s layout stacking
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle
# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent
# focus the child container
bindsym $mod+c focus child

# switch to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+Left workspace prev
bindsym $mod+Right workspace next
bindsym $mod+Ctrl+h workspace prev
bindsym $mod+Ctrl+l workspace next

# Enable double pressing of workspace binding to return to previous space
workspace_auto_back_and_forth yes

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+Left move workspace to output left
bindsym $mod+Shift+Right move workspace to output right

# resize window (you can also use the mouse for that)
set $resizemenu "resize: [h] w- [j] h+ [k] h- [l] w+"
bindsym $mod+r mode $resizemenu
mode $resizemenu {
    # These bindings trigger as soon as you enter the resize mode
    bindsym $mod+s+Left resize shrink width 10 px or 10 ppt
    bindsym $mod+s+Up  resize grow height 10 px or 10 ppt
    bindsym $mod+s+Down  resize shrink height 10 px or 10 ppt
    bindsym $mod+s+Right  resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

# Book launcher menu
set $bookmenu "books: [c]omp_structs [s]oft_eng"
#bindsym $mod+b mode $bookmenu
mode $bookmenu {
    bindsym c exec zathura /home/leaf/Skoo/sipser.pdf; mode "default"
    bindsym s exec zathura /home/leaf/Skoo/soft_eng.pdf; mode "default"
    # Same as above but doesn't exit book mode. Useful for opening many books
    bindsym Shift+c exec zathura /home/leaf/Skoo/sipser.pdf
    bindsym Shift+s exec zathura /home/leaf/Skoo/soft_eng.pdf
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+b mode "default"
}

# System menu
set $sysmenu "system:  [s]uspend [r]eload re[b]oot [p]oweroff [c]onf [e]xit"
bindsym $mod+q mode $sysmenu
mode $sysmenu {
    # restart i3 inplace (preserves your layout/session)
    bindsym r restart
    bindsym x reload; mode "default"
    bindsym s exec systemctl suspend; mode "default"
    bindsym b exec systemctl reboot
    bindsym p exec systemctl shutdown
    bindsym c exec roxterm -e vim .i3/config; mode "default"
    bindsym e exit
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+q mode "default"
}

# THEME CONFIGURATION #

# Colorscheme definitions
set $fg #1793b1
set $fgStat #37b3f1
set $bg #333333
set $fgP #0b4866

# Start i3bar to display a workspace bar
bar {
    # Using i3pystatus
    status_command python ~/.i3/status.py
    # Using i3status
    #status_command i3status --config ~/.i3/status.conf
    position top
    mode dock
    # Don't show #s on workspace labels. Looks pleasant & retains functionality
    #strip_workspace_numbers yes
    # Holding <Alt> displays the dock if it is hidden with $mod+b
    modifier Mod1
    colors {
        background $bg
        statusline $fgStat
        separator #aaaaaa

        # Property         border  backgr  text
        focused_workspace  $fg     $fg     #ffffff
        inactive_workspace $fg     $fgP    #bbbbbb
        urgent_workspace   #0bd866    $fgP    #ffffff
    }
}

# Background image
exec --no-startup-id feh --bg-scale ~/Pictures/iranshrine.jpg

# New window's border
new_window pixel 1

# Remove window borders along screen edges
# hide_edge_borders both

# Color scheme
#class                  border  backgr  text    indicator
client.focused          $fgStat $fgStat #ffffff $fg
client.unfocused        $fgStat    $fgP    #bbbbbb $fg
client.focused_inactive $fgP    $fgP    #bbbbbb #000000
