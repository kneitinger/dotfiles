#!/usr/bin/env bash

# Keeps PATH tidy by checking if entries are present before adding them

export GOPATH=$HOME/r/go

# Language specific paths
paths=("$HOME/.cargo/bin" "$GOBIN")
# Extra bins and opts
paths+=("$HOME/bin" "$HOME/.local/bin"  "/opt")

for p in "${paths[@]}"; do
    if [[ "$PATH" != *"$p"* ]]; then
        PATH="$p:$PATH"
    fi
done
